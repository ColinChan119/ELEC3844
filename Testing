void FindAction(){
Find:  
  if (window_size ==0){
    if (distance_right_in_cm <20){
      while (( distance_left_in_cm >=20)|| window_size==0){
        LEFT_2();
      }
    }
    else if ( distance_left_in_cm <20){
      RIGHT_2();
    }
    else if (distance_difference <2){
      ADVANCE();
      delay(1500);
      while (( distance_right_in_cm >=20)|| window_size==0){
        RIGHT_2();
      }
    }
  goto Find;}
 STOP();
 delay(1500);
 while(pan!=90){
  if (pan>90){
    LEFT_2();
   }
  else if (pan<90){
    RIGHT_2();
  }
 }
}

